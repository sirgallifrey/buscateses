    "classnames": "^2.2.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-log": "^2.2.14",
    "got": "^8.3.0",
    "json2csv": "^4.1.2",
    "lodash.debounce": "^4.0.8",
    "promise-retry": "^1.1.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-hot-loader": "^3.0.0-beta.6",
    "realm": "^2.24.0",
    "reflect-metadata": "^0.1.13",
    "sanitize-filename": "^1.6.1",
