{
  "name": "buscateses",
  "productName": "buscateses",
  "version": "0.5.0",
  "description": "Applicação para buscar base de dados do Capes e salvar em formato .csv",
  "main": "src/main-process/index.js",
  "scripts": {
    "start": "concurrently \"npm:start-renderer\" \"npm:start-main\" -k -c green,magenta",
    "start-renderer": "webpack-dev-server --mode development",
    "start-main": "tsc -p src/main/tsconfig.json && electron dist/main/index.js",
    "compile-main": "tsc -p src/main/tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Adilson Schmitt Junior",
  "license": "cc-by-nc-sa-4.0",
  "build": {
    "appId": "sh.adilson.buscateses"
  },
